{
  "name": "mementogram",
  "version": "1.0.0",
  "private": true,
  "description": "Mementogram - A multi-featured social media application.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "npm run dev -w @mementogram/backend",
    "dev:frontend": "npm run dev -w @mementogram/frontend",
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore",
    "format": "prettier --write . --ignore-path .gitignore",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.13.13",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chinmaycp/mementogram.git"
  },
  "keywords": [],
  "author": "Chinmay Patel",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/chinmaycp/mementogram/issues"
  },
  "homepage": "https://github.com/chinmaycp/mementogram#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
